          <img src="img/I get the key.png" class="img-thumbnail img-responsive" >
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2 col-lg-offset-5 text-center">
          <button type="button" id="join" class="btn btn-primary btn-lg btn-block">Join a game</button>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2 col-lg-offset-5 text-center">
          <button type="button" id="showlist" class="btn btn-xs btn-block">Show room list</button>
        </div>
      </div>
      </div>
      </div>
      <div class="modal fade" id="listmodal" >
      <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 class="text-center">Room list</h3>
        </div>
      <div class="modal-body">
        <span id="list">
        Loading...
        </span>
        <button id="create" class="btn block">Create a new room</button>
        <div id="newroomform" class="well">
          <form class="form-horizontal" method="post" action="/create">
            <div class="form-group">
            <label class="col-lg-2 control-label">Name:</label>
            <div class="col-lg-10">
            <input name="name" class="form-control" type="text" placeholder="<%= placeholder[0] %>">
            </div>
            </div>
            <div class="form-group">
            <label class="col-lg-2 control-label">Tags:</label>
            <div class="col-lg-10">
            <input name="tags" type="text" class="form-control" placeholder="e.g. <%= placeholder[1] %>...">
            </div>
            </div>
            <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
            <input class="btn" type="submit" value="Submit">
            </div>
            </div>
          </form>
        </div>
      </div>
