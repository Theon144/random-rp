<!DOCTYPE html>
<html lang="en">
  <head>
    <title>RandomRP - <%= name %></title>
    <link href="../css/main.css" rel="stylesheet">
    <link href="../css/chat.css" rel="stylesheet">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/mustache.js/0.7.2/mustache.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script id="template-chat" type="text/template">
      <div class="message">
        <span class="nick {{nick}}">{{nick}}</span>: <span class="content">{{message}}</span>
      </div>
    </script>
    <script id="template-roll" type="text/template">
      <div class="message">
        <span class="nick {{nick}}">{{nick}}</span> has rolled "{{roll}}": {{#rolls}}{{.}} {{/rolls}}= {{result}}
      </div>
    </script>
    <script id="template-me" type="text/template">
      <div class="message">
        <em><span class="nick {{nick}}">{{nick}}</span> {{message}}</em>
      </div>
    </script>
    <script id="template-system" type="text/template">
      <div class="message">
        <span class="system">-!- {{message}}</span>
      </div>
    </script>
    <script type="text/javascript">
      roomID = "<%= id %>";
    </script>
    <script src="../js/client.js"></script>
  </head>
  <body>
    <div class="container ">
      <div class="navbar navbar-static-top">
        <a class="navbar-brand" href="#">RandomRP</a>
        <ul class="nav navbar-nav pull-right">
          <li class="active"><a href="#">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>     <div class="row" id="logRow">
        <div class="col-lg-12 ">
          <div id="log" class="well "></div>
        </div>
      </div>
      <div class="row" id="chatRow">
        <div class="col-lg-12">
          <div class="input-group">
              <input type="text" class="form-control" id="outMsg">
              <span class="input-group-btn">
                <button class="btn btn-default btn-primary" type="button" id="send">Send</button>
              </span>
          </div>
        </div>
      </div>
      <div class="modal fade" id="nickModal" >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
            <form class=form-inline">
              <div class="row">
                <div class="col-lg-10">
                  <input type="text" class="form-control" id="nick" placeholder="nickname" />
                </div>
                <div class="col-lg-2">
                  <a class="btn btn-default" id="join" href="#">Join</a>
                </div>
              </div>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

